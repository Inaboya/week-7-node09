                    <li class="nav-item">
                        <a href="#" class="nav-link">View Books</a>
                    </li>
                </ul>
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" data-mdb-ripple-color="dark" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>


    <div class="container mt-5">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="container mb-5">
                    <h3 class="text-center" style="font-size: 30px; color:teal">Post New Book</h3>
                </div>
                <form method="POST" id="form" action="">
                    {cke_protected_1}
                    <div class="form-outline mb-4">
                        <input type="text" id="title" class="form-control" data-cke-saved-name="title" name="title" />
                        <label class="form-label" for="title">Book Title</label>
                    </div>
                    {cke_protected_2}
                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <input type="text" id="author" class="form-control" data-cke-saved-name="author"/
                                    name="author" />
                                <label class="form-label" for="author">Author's Name</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-outline">
                                <input type="number" id="pagenumber" class="form-control"
                                    data-cke-saved-name="pagenumber"/ name="pagenumber" />
                                <label class="form-label" for="pagenumber">Page Number</label>
                            </div>
                        </div>
                    </div>
                     <div class="row mb-4">
                         <div class="col">
                             <div class="form-outline">
                                 <input type="text" id="genre" class="form-control" data-cke-saved-name="genre"/
                                     name="genre" />
                                 <label class="form-label" for="genre">Genre</label>
                             </div>
                         </div>
                         <div class="col">
                             <div class="form-outline">
                                 <input type="text" id="publisher" class="form-control" data-cke-saved-name="publisher"/
                                     name="publisher" />
                                 <label class="form-label" for="publisher">Publisher</label>
                             </div>
                         </div>
                     </div>
                     <div class="row mb-4">
                         <div class="col">
                             <div class="form-outline">
                                 <input type="date" id="datepublish" data-cke-saved-name="datepublish"
                                     name="datepublish" class="form-control" />
                                 <label class="form-label" for="datepublish">Date</label>
                             </div>
                         </div>
                     </div>
                     {cke_protected_3}
                     <div class="form-outline mb-4">
                         <textarea class="form-control" id="description" rows="4" name="description"></textarea>
                         <label class="form-label" for="description">Description</label>
                     </div>
                     {cke_protected_4}

                     <button type="submit" class="btn btn-primary btn-block mb-4" id="submitbtn"
                         style="width: 100%;">Add New Book</button>
                     </form>
                     </div>
                     <div class="col-md-3"></div>
                     </div>
                     </div>
