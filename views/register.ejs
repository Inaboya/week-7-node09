    <div class="container" style="margin: 100px;">
        
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <% if(message.length > 0) { %>
                        <p class="alert alert-danger" style="font-size: 40px;">
                            <%=message%>
                        </p>
                        <%}%>


                        <% if(messageerror.length>0) {%>
                            <p class="alert alert-danger" style="font-size: 40px;">
                                <%=messageerror%>
                            </p>

                            <%}%>

                            <h3 class="text-center mb-5 mt-3">
                                New User?
                            </h3>


                            <form action="/register" method="post">
                                <div class="form-outline mb-4">
                                    <label for="fullName" class="form-label">Full Name</label>
                                    <input type="text" id="fullName" value="" class="form-control" name="fullName">
                                </div>

                                <div class="form-outline mb-4">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" id="email" value="" class="form-control" name="email">
                                </div>


                                <div class="form-outline mb-4">
                                    <label for="dateOfBirth" class="form-label">Date Of Birth</label>
                                    <input type="date" id="dateOfBirth" value="" class="form-control" name="dateOfBirth">
                                </div>

                                <div class="form-outline mb-4">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" id="password" value="" class="form-control" name="password">
                                </div>

                                <div class="form-outline mb-4">
                                    <label for="password" class="form-label">Confirm Password</label>
                                    <input type="password" id="password2" value="" class="form-control" name="password2">
                                </div>


                                <button type="submit" class="btn btn-success mb-3">Join</button>

                                <div class="row mb-4 text-center">
                                    <a href="/login">Already have an account? &rarr;</a>
                                </div>
                            </form>
                    </div>
                </div>
            </div>

            <div class="col-md-3"></div>
